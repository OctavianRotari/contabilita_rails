<div class="row">
<div class="new">
	<%= form_for company do |form| %>
		<% if company.errors.any? %>
			A causa di questi errori non e' stato possibile creare l'azienda:
			<ul>
				<% company.errors.messages.each do |name, error| %>
					<li><%= error[0] %></li>
				<% end %>
			</ul>
		<% end %>
		<div class="row">
			<div class="col span-1-of-3">
				<%= form.label 'Nome' %>
			</div>
			<div class="col span-2-of-3">
				<%= form.text_field :name, require: true %>
			</div>
		</div>
		<div class="row">
			<div class="col span-1-of-3">
				<%= form.label 'Indirizzo' %>
			</div>
			<div class="col span-2-of-3">
				<%= form.text_field :adress, require: true %>
			</div>
		</div>
		<div class="row">
			<div class="col span-1-of-3">
				<%= form.label 'Numero' %>
			</div>
			<div class="col span-2-of-3">
				<%= form.text_field :number, require: true %>
			</div>
		</div>
		<div class="row">
			<div class="col span-1-of-3">
				<%= form.label 'Categoria azienda' %>
			</div>
			<div class="col span-2-of-3">
				<%= list_of_categories_selected_value(form) %>
			</div>
		</div>
		<div class="row">
			<div class="col span-3-of-3 submit">
				<%= form.submit "Conferma", class: "btn btn-big" %>
			</div>
		</div>
	<% end %>
</div>
</div>
