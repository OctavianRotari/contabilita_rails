<%= link_to "Aggiungi fattura", new_company_invoice_path(@company.id) %>
<h2><%= @company.name %></h2>
<table>
<thead>
	<tr>
		<th>Motivo</th>
		<th>Totale</th>
		<th>Iva</th>
		<th>Data di emmissione</th>
		<th>Targa</th>
		<th>Scadenza</th>
		<th>Elimina</th>
	</tr>
</thead>
<tbody>
	<% @company.invoices.each do |invoice|%>
		<tr>
			<td><%=link_to invoice.reason, company_invoice_path(company_id: @company.id, id: invoice.id) %></td>
			<td><%=invoice.total %></td>
			<td><%=invoice.vat %></td>
			<td><%=invoice.date_of_issue%></td>
			<td><%=invoice.plate %></td>
			<td><%=invoice.deadline%></td>
			<td><%=button_to "Elimina fattura", company_invoice_path(company_id: @company.id, id: invoice.id), method: :delete %></td>
		</tr>
	<%end%>
</tbody>
</table>
