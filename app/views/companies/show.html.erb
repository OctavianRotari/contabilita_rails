<%= link_to "Aggiungi fattura", new_company_invoice_path(@company.id) %>
<h2><%= @company.name %></h2>
<table>
<thead>
	<tr>
		<th>Motivo</th>
		<th>Pagato</th>
		<th>Totale</th>
		<th>Iva</th>
		<th>Data di emmissione</th>
		<th>Targa</th>
		<th>Scadenza</th>
		<th>Tipo di pagamento</th>
	</tr>
</thead>
<tbody>
	<% @company.invoices.each do |invoice|%>
		<tr>
			<td><%=invoice.reason %></td>
			<td><%=invoice.paid%></td>
			<td><%=invoice.total %></td>
			<td><%=invoice.vat %></td>
			<td><%=invoice.date%></td>
			<td><%=invoice.plate %></td>
			<td><%=invoice.deadline%></td>
			<td><%=invoice.type_of_payment %></td>
		</tr>
	<%end%>
</tbody>
</table>
