<div class="row">
<div class="invoices">
	<h3 class="title">Fatture da pagare</h3>
	<table>
		<thead>
			<tr>
				<th>Fornitore</th>
				<th>Totale</th>
				<th class="vat">Iva</th>
				<th class="paid">Pagato</th>
				<th>Da pagare</th>
				<th>Motivo</th>
				<th class="at-the-expense-of">A carrico di</th>
				<th class="deadline">Scadenza</th>
				<th class="cash-invoice"></th>
				<th class="delete-invoice"></th>
			</tr>
		</thead>
		<%= render partial: invoices.not_paid(invoices), locals: {calculator: calculator} %>
		<%= render partial: "calculators/totals", locals: {calculator: calculator, invoices: invoices.not_paid(invoices)} %>
	</table>
</div>
<div class="invoices">
	<h3 class="title">Fatture da incassare</h3>
	<table>
		<thead>
			<tr>
				<th>Fornitore</th>
				<th>Totale</th>
				<th class="vat">Iva</th>
				<th class="paid">Incassato</th>
				<th>Da incassare</th>
				<th>Motivo</th>
				<th class="at-the-expense-of">A carrico di</th>
				<th class="at-the-expense-of">Scadenza</th>
				<th class="cash-invoice"></th>
				<th class="delete-invoice"></th>
			</tr>
		</thead>
		<%= render partial: invoices.not_collected(invoices), locals: {calculator: calculator}  %>
		<%= render partial: "calculators/totals", locals: {calculator: calculator, invoices: invoices.not_collected(invoices)} %>
	</table>
</div>
</div>
