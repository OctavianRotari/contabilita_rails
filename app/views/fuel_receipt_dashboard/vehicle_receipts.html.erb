<div class="row">
  <div class="index">
    <h2 id='vehicle_plate'><%= @fuel_receipts_dashboard.vehicle.plate %></h2>
  </div>
</div>
<div class="row">
  <div class="invoices-by-year">
    <h3>Anno: <%= params[:year]%></h3>
    <h4><%= previos_year_fuel_receipts_vehicle(@fuel_receipts_dashboard.vehicle) %></h4>
    <h4><%= next_year_fuel_receipts_vehicle(@fuel_receipts_dashboard.vehicle) %></h4>
  </div>
</div>
<div class="row">
  <div class="index">
    <div id="fuel_receipts">
      <%= render partial: "fuel_receipts/fuel_receipts",  locals: { fuel_receipts: @fuel_receipts_dashboard.vehicle_fuel_receipts_ord, fuel_receipts_calculator: @fuel_receipts_dashboard.calculator } %>
    </div>
  </div>
</div>
