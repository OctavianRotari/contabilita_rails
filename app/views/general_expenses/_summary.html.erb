<div class="row">
  <div class="garage-totals">
    <div class="col span-1-of-2">
      <div class="total">
        <h3>Totale spese</h3>
        <h5>Mese corrente: </h5><p id="current_month_costs"><%= invoices.month_passive.total_all %></p>
        <h5>Anno corrente: </h5><p id="current_year_costs"><%= invoices.year_passive.total_all %></p>
      </div>
    </div>
    <div class="col span-1-of-2">
      <div class="total">
        <h3>Spese per mezzo</h3>
        <h5>Mese corrente: </h5><p id="current_month_costs_per_vehicle"><%= calculator.total_general_expenses_month(invoices) %></p>
        <h5>Anno corrente: </h5><p id="current_year_costs_per_vehicle"><%= calculator.total_general_expenses_year(invoices) %></p>
      </div>
    </div>
  </div>
</div>
