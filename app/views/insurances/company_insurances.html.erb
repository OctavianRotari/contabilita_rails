<div class="row">
  <div class="invoices-by-year">
    <h3>Anno: <%= params[:year]%></h3>
    <h4><%= previos_year_insurances(@company) %></h4>
    <h4><%= next_year_insurances(@company) %></h4>
  </div>
</div>
<div class="row">
  <div class="invoices">
    <h3 class="title">Assicurazioni</h3>
    <table>
      <thead>
        <tr>
          <th>Assicuratore</th>
          <th>Totale</th>
          <th class="paid">Pagato</th>
          <th>Descrizione</th>
          <th class="at-the-expense-of">A carrico di</th>
          <th class="deadline">Scadenza</th>
          <th class="cash-invoice"></th>
          <th class="delete-invoice"></th>
        </tr>
      </thead>
      <%= render @insurances.year(params[:year]) %>
    </table>
  </div>
</div>
