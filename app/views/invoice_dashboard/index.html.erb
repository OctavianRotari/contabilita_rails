<div class="row">
<div class="home-invoices">
	<div class="invoices">
		<h3 class="title">Fatture da pagare</h3>
		<table>
			<thead>
				<tr>
					<th>Fornitore</th>
					<th>Totale</th>
					<th class="vat">Iva</th>
					<th>Pagato</th>
					<th>Da pagare</th>
					<th>Motivo</th>
					<th>A carrico di</th>
					<th>Scadenza</th>
					<th class="cash-invoice"></th>
					<th class="delete-invoice"></th>
				</tr>
			</thead>
			<%= render @invoice_dashboard.not_paid_invoices %>
			<tfoot>
				<tr class="totals">
					<td>Totale:</td>
					<td><%= @calculator.total_all(@invoice_dashboard.not_paid_invoices) %></td>
					<td class="vat"><%= @calculator.total_vat_all(@invoice_dashboard.not_paid_invoices) %></td>
					<td><%= @calculator.total_paid_or_collected_all(@invoice_dashboard.not_paid_invoices) %></td>
					<td><%= @calculator.total_remaining_all(@invoice_dashboard.not_paid_invoices) %></td>
				</tr>
			</tfoot>
		</table>
	</div>
	<div class="invoices">
		<h3 class="title">Fatture da incassare</h3>
		<table>
			<thead>
				<tr>
					<th>Fornitore</th>
					<th>Totale</th>
					<th class="vat">Iva</th>
					<th>Incassato</th>
					<th>Da incassare</th>
					<th>Motivo</th>
					<th>A carrico di</th>
					<th>Scadenza</th>
					<th class="cash-invoice"></th>
					<th class="delete-invoice"></th>
				</tr>
			</thead>
			<%= render @invoice_dashboard.not_collected_invoices %>
			<tfoot>
				<tr class="totals">
					<td>Totale:</td>
					<td><%= @calculator.total_all(@invoice_dashboard.not_collected_invoices) %></td>
					<td class="vat"><%= @calculator.total_vat_all(@invoice_dashboard.not_collected_invoices) %></td>
					<td><%= @calculator.total_paid_or_collected_all(@invoice_dashboard.not_collected_invoices) %></td>
					<td><%= @calculator.total_remaining_all(@invoice_dashboard.not_collected_invoices) %></td>
				</tr>
			</tfoot>
		</table>
	</div>
</div>
</div>
