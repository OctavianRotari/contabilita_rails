<div class="taxable">
  <fieldset>
    <div class="col span-1-of-3">
      <%= f.label 'Imponibile' %>
    </div>
    <div class="col span-2-of-3">
      <%= f.text_field :taxable, require: true %>
      <%= f.label 'Iva' %>
        <%= f.select(:vat_rate, options_for_select([['Senza iva', 1],['4', 4],['10', 10],['22',22]], selected: f.object.vat_rate), prompt: 'Selezionare Iva') %>
      <%= f.hidden_field :_destroy %>
      <%= link_to "Remove", '#', class: "remove_fields" %>
    </div>
  </fieldset>
</div>
