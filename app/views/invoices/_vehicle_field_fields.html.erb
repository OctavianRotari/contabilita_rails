<fieldset>
  <div class="row">
    <div class="col span-1-of-3">
      <%= f.label 'Mezzo' %>
    </div>
    <div class="col span-2-of-3">
      <%= f.select(:vehicle_id) do %>
        <%= options_from_collection_for_select(@vehicles, :id, :plate) %>
      <% end %>
      <%= f.hidden_field :_destroy %>
    </div>
  </div>
  <div class="row">
    <div class="col span-1-of-3">
      <%= f.label 'Totale' %>
    </div>
    <div class="col span-2-of-3">
      <%= f.text_field :total, require: true %>
    </div>
    <%= link_to "Remove", '#', class: "remove_fields" %>
  </div>
</fieldset>
