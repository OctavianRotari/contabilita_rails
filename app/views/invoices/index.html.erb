<table>
<thead>
	<tr>
		<th>Fornitore</th>
		<th>Totale</th>
		<th>Motivo</th>
		<th>Iva</th>
		<th>Data di emmissione</th>
		<th>Targa</th>
		<th>Scadenza</th>
	</tr>
</thead>
<tbody>
	<% @invoices.each do |invoice|%>
		<tr>
			<td><%=link_to invoice.company_name, company_path(invoice.company_id) %></td>
			<td><%=invoice.total %></td>
			<td><%=invoice.reason %></td>
			<td><%=invoice.vat %></td>
			<td><%=invoice.date%></td>
			<td><%=invoice.plate %></td>
			<td><%=invoice.deadline%></td>
		</tr>
	<%end%>
</tbody>
</table>
