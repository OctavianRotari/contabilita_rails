<!DOCTYPE html>
<html>
	<head>
		<title>Contabilita'</title>
		<link rel="apple-touch-icon" sizes="120x120" href="app/assets/favicons/images/apple-touch-icon.png">
		<link rel="icon" type="image/png" href="app/assets/images/favicons/favicon-32x32.png" sizes="32x32">
		<link rel="icon" type="image/png" href="app/assets/images/favicons/favicon-16x16.png" sizes="16x16">
		<link rel="manifest" href="app/assets/images/favicons/manifest.json">
		<link rel="mask-icon" href="app/assets/images/favicons/safari-pinned-tab.svg" color="#5bbad5">
		<link rel="shortcut icon" href="app/assets/images/favicons/favicon.ico">
		<meta name="msapplication-config" content="app/assets/images/favicons/browserconfig.xml">
		<meta name="theme-color" content="#000000">
		<meta name="vieport" content="width=device-width, initial-scale=1.0">
		<link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400" rel="stylesheet" type="text/css">
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<header>
			<div class="top-section-background">
				<div class="row">
					<div class="top-section">
						<div class="col span-1-of-3">
							<div class="logo-title">
								<div class="app-logo"><%=image_tag("accounting.png")%></div>
								<div class="app-title"><%= link_to root_path do %>
									<h1>Contabilita</h1>
								<% end %>
								</div>
							</div>
						</div>
						<div class="company-name col span-1-of-3">
							<% if user_signed_in? %>
								<h2><%= current_user.email %></h2>
							<% end %>
						</div>
						<div class="col span-1-of-3">
							<% if user_signed_in? %>
								<div class="log-section">
									<%= link_to destroy_user_session_path, :method => :delete do %>
										<h2>Logout</h2><i class="icon-big ion-log-out"></i>
									<% end %>
								</div>
							<% else %>
								<div class="log-section">
									<h2>
										<%= link_to new_user_session_path do %>
											<h2>Accedi</h2><i class="icon-big ion-log-in"></i>
										<% end %>
									</h2>
									<h2>
										<%= link_to new_user_registration_path do %>
											<h2>Registrati</h2><i class="icon-big ion-person-add"></i>
										<% end %>
									</h2>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
			<% if user_signed_in? %>
				<%= render partial: "accounting/main_nav" %>
			<% end %>
		</header>
		<div class="row">
			<%= display_errors(flash) %>
		</div>
		<div class="row page-wrap">
			<%= yield %>
		</div>
		<div class="site-footer">
			<footer>
			</footer>
		</div>
	</body>
	<script src="https://cdn.jsdelivr.net/selectivizr/1.0.3b/selectivizr.min.js"></script>
</html>
