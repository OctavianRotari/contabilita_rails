<!DOCTYPE html>
<html>
	<head>
		<title>ContabilitaRails</title>
		<link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400" rel="stylesheet" type="text/css">
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<header>
			<div class="top-section-background">
				<div class="row">
					<div class="top-section">
						<div class="col span-1-of-3">
							<div class="logo-title">
								<div class="app-logo"><%=image_tag("accounting.png")%></div>
								<div class="app-title"><h1><%= link_to 'Contabilita', root_path %></h1></div>
							</div>
						</div>
						<div class="company-name col span-1-of-3">
							<% if user_signed_in? %>
								<h2><%= current_user.email %></h2>
							<% end %>
						</div>
						<div class="col span-1-of-3">
							<% if user_signed_in? %>
								<div class="log-section">
									<%= link_to destroy_user_session_path, :method => :delete do %>
										<h2>Logout</h2><i class="icon-big ion-log-out"></i>
									<% end %>
								</div>
							<% else %>
								<div class="log-section">
									<h2>
										<%= link_to "Accedi", new_user_session_path %>
									</h2>
									<h2>
										<%= link_to "Registrati", new_user_registration_path %>
									</h2>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
			<nav>
				<div class="main-nav-background">
					<div class="row js--main-navigation">
						<div class="logo-sticky">
							<%=image_tag("accounting.png")%>
						</div>
						<div class="app-title-sticky">
							<h1 class="app-title" ><%= link_to 'Contabilita', root_path %></h1>
						</div>
						<% if user_signed_in? %>
							<ul class="main-nav col span-1-of-2">
								<div class="static col span-1-of-6">
									<span><li><%= link_to 'Home', dashboard_invoices_path %></li></span>
								</div>
								<div class="static col span-1-of-6">
									<span><li><%= link_to 'Officina', garages_path %></li></span>
								</div>
								<div class="dropdown col span-1-of-6">
									<span>Fatture</span>
									<div class="dropdown-content">
										<ul>
											<% if Invoice.active.any?%>
												<li><%= link_to 'Fatture attive', active_invoices_path(year_param: Time.now.year) %></li>
											<% end %>
											<% if Invoice.passive.any?%>
												<li><%= link_to 'Fatture passive', passive_invoices_path(year_param: Time.now.year)  %></li>
											<% end %>
											<li><%= link_to "Aggiungi fattura", new_invoice_path %></li>
										</ul>
									</div>
								</div>
								<div class="dropdown col span-1-of-6">
									<span>Aziende</span>
									<div class="dropdown-content">
										<ul>
											<li><%= link_to 'Visualiza aziende', dashboard_companies_path %></li>
											<li><%= link_to 'Aggiungi azienda', new_company_path %></li>
										</ul>
									</div>
								</div>
								<div class="dropdown col span-1-of-6">
									<span>Mezzi</span>
									<div class="dropdown-content">
										<ul>
											<li><%= link_to 'Visualizza mezzi', dashboard_vehicles_path %></li>
											<li><%= link_to 'Aggiungi mezzo', new_vehicle_path %></li>
										</ul>
									</div>
								</div>
								<div class="dropdown col span-1-of-6">
									<span>Categorie</span>
									<div class="dropdown-content">
										<ul>
											<li><%= link_to 'Aggiungi categoria', new_category_path %></li>
										</ul>
									</div>
								</div>
							</ul>
						<% end %>
					</div>
				</div>
			</nav>
		</header>
		<div class="row">
			<%= display_errors(flash) %>
		</div>
		<div class="row page-wrap">
			<%= yield %>
		</div>
		<div class="site-footer">
			<footer>
			</footer>
		</div>
	</body>
</html>
