<tfoot>
  <tr class="totals">
    <td>Totale:</td>
    <% invoices = invoices.month_active(month) %>
    <td class="total"><%= invoices.total_all %></td>
    <td class="vat"><%= invoices.total_vat_all %></td>
    <% total_to_collect = calculator.total_paid_or_collected_all(invoices) %>
    <td class="paid"><%= total_to_collect %></td>
    <td class="to_pay"><%= invoices.not_collected.total_all - total_to_collect %></td>
  </tr>
</tfoot>
