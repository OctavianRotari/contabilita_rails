<div class="data-summary">
  <div class="row">
    <div class="col span-1-of-2">
      <h4>Fatture passive</h4>
      <p>da pagare:</p>
    </div>
    <div class="col span-1-of-2 data">
      <br>
      <p id="passive_amont_to_pay"><%= invoices.not_paid.total_all %> </p>
    </div>
  </div>
  <div class="row">
    <div class="col span-1-of-2">
      <h4>Fatture attive</h4>
      <p>da incassare:</p>
    </div>
    <div class="col span-1-of-2 data">
      <br>
      <p id="active_amout_to_collect"><%= invoices.not_collected.total_all %></p>
    </div>
  </div>
  <div class="row">
    <div class="col span-1-of-2">
      <h4>Totale spese</h4>
      <p>Mese corrente:</p>
    </div>
    <div class="col span-1-of-2 data">
      <br>
      <p id="current_month_costs"><%= invoices.month_passive.total_all %></p>
    </div>
  </div>
  <div class="row">
    <div class="col span-1-of-2">
      <p>Anno corrente: </p>
    </div>
    <div class="col span-1-of-2 data">
      <p id="current_year_costs"><%= invoices.year_passive.total_all %></p>
    </div>
  </div>
</div>
