<%= form_for vehicle_instance do |form| %>
	<% if vehicle_instance.errors.any? %>
		<%= pluralize(vehicle_instance.errors.count, "error") %> prevented your account from being created:
		<ul>
			<% vehicle_instance .errors.full_messages.each do |error_message| %>
				<li><%= error_message %></li>
			<% end %>
		</ul>
	<% end %>
	<div>
		<%= form.label 'Targa' %>
		<%= form.text_field :plate, require: true %>
	</div>
	<div>
		<%= form.label 'Tipo mezzo' %>
		<%= form.text_field :type_of_vehicle, require: true %>
	</div>
	<div>
		<%= form.submit "Aggiungi mezzo" %>
	</div>
<% end %>
