<h2><%= @vehicle.plate %></h2>
<table>
<thead>
	<tr>
		<th>Motivo</th>
		<th>Totale</th>
		<th>Iva</th>
		<th>Data di emmissione</th>
		<th>Targa</th>
		<th>Scadenza</th>
	</tr>
</thead>
<tbody>
	<% @vehicle.invoices.each do |invoice|%>
		<tr>
			<td><%=link_to invoice.reason, company_invoice_path(company_id: invoice.company.id, id: invoice.id) %></td>
			<td><%=invoice.total %></td>
			<td><%=invoice.vat %></td>
			<td><%=invoice.date_of_issue%></td>
			<td><%=invoice.vehicle.plate %></td>
			<td><%=invoice.deadline%></td>
		</tr>
	<%end%>
</tbody>
</table>
